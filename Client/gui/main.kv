#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MainScreen:
    canvas.before:
        Color:
            rgba: 1, .95, .9, .85
        Rectangle:
            pos: self.pos
            size: self.size
    transition: FadeTransition()
    LoginScreen:
    RegistrationScreen:

<LoginScreen>:
    id: login
    display: username
    display: password

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: .4, .2
            spacing: 5
            orientation: 'vertical'

            TextInput:
                id: username
                multiline: False
                password: False
                hint_text: 'Username'
                font_size: self.height * 0.6
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

            TextInput:
                id: password
                multiline: False
                password: True
                hint_text: 'Password'
                font_size: self.height * 0.6
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    font_size: self.y * 0.1
                    text: 'Login'

                Button:
                    font_size: self.y * 0.1
                    text: 'Registration'


<RegistrationScreen>:
    id: registration
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'