<RegistrationScreen>:
    connectionManager: app.connectionManager
    first_name: first_name
    last_name: last_name
    email: email
    username: username
    password: password
    confirm_password: confirm_password
    error_message: error_message

    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 50
            spacing: 10

            MDTextField:
                id: first_name
                hint_text: "First Name"
                required: True
                helper_text_mode: "on_error"
                font_size: self.parent.height * 0.035

            MDTextField:
                id: last_name
                hint_text: "Last Name"
                required: True
                helper_text_mode: "on_error"
                font_size: self.parent.height * 0.035

            MDTextField:
                id: email
                hint_text: "Email"
                required: True
                helper_text_mode: "on_error"
                font_size: self.parent.height * 0.035

            MDTextField:
                id: username
                hint_text: "Username"
                required: True
                helper_text_mode: "on_error"
                font_size: self.parent.height * 0.035

            MDTextField:
                id: password
                hint_text: "Password"
                required: True
                password: True
                helper_text_mode: "on_error"
                font_size: self.parent.height * 0.035

            MDTextField:
                id: confirm_password
                hint_text: "Confirm password"
                required: True
                password: True
                helper_text_mode: "on_error"
                font_size: self.parent.height * 0.035
                on_text: self.error=False

            MDLabel:
                id: error_message
                font_style: 'Title'
                theme_text_color: 'Error'
                text: ""
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1] + dp(4)

            BoxLayout:
                size_hint_y: None
                spacing: 0.05 * self.width

                Widget:
                MDRoundFlatIconButton:
                    text: "Registration"
                    icon: "account-plus"
                    width: 0.4 * self.parent.width
                    height: 0.45 * self.parent.height
                    on_press: root.registration()

                MDRoundFlatIconButton:
                    text: "Login"
                    icon: "login"
                    width: 0.4 * self.parent.width
                    height: 0.45 * self.parent.height
                    on_press: root.to_login_screen()
                Widget: