<HomeScreenManager>:
    id: homeScreenManager
    productListScreen: productListScreen
    transactionHistoryScreen: transactionHistoryScreen
    personalInformationScreen: personalInformationScreen
    appInformationScreen: appInformationScreen


    Screen:
        name: 'LoadingScreen'
        manager: homeScreenManager

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: True

    ProductListScreen:
        id: productListScreen
        name: 'ProductListScreen'
        manager: homeScreenManager

    TransactionHistoryScreen:
        id: transactionHistoryScreen
        name: 'TransactionHistoryScreen'
        manager: homeScreenManager

    PersonalInformationScreen:
        id: personalInformationScreen
        name: 'PersonalInformationScreen'
        manager: homeScreenManager

    AppInformationScreen:
        id: appInformationScreen
        name: 'AppInformationScreen'
        manager: homeScreenManager