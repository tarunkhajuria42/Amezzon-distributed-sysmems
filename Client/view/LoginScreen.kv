<LoginScreen>:
    connectionManager: app.connectionManager
    username: username
    password: password

    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: [0.1 * self.parent.width, 0.35 * self.parent.height]
            spacing: 15

            MDTextField:
                id: username
                hint_text: "Login"
                required: True
                font_size: self.parent.height * 0.035
                helper_text_mode: "on_error"

            MDTextField:
                id: password
                hint_text: "Password"
                required: True
                password: True
                font_size: self.parent.height * 0.035
                helper_text_mode: "on_error"

            BoxLayout:
                size_hint_y: None
                spacing: 0.05 * self.width

                Widget:
                MDRoundFlatIconButton:
                    text: "Login"
                    icon: "login"
                    width: 0.4 * self.parent.width
                    height: 0.45 * self.parent.height
                    on_press: root.login()

                MDRoundFlatIconButton:
                    text: "Registration"
                    icon: "account-plus"
                    width: 0.4 * self.parent.width
                    height: 0.45 * self.parent.height
                    on_press: root.to_registration_screen()
                Widget: