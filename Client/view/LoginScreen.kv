<LoginScreen>:
    connection_manager: app.connection_manager
    username: username
    password: password

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: .4, .2
            spacing: 5
            orientation: 'vertical'

            TextInput:
                id: username
                multiline: False
                password: False
                hint_text: 'Username'
                font_size: self.height * 0.6
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

            TextInput:
                id: password
                multiline: False
                password: True
                hint_text: 'Password'
                font_size: self.height * 0.6
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    font_size: self.height * 0.2 + self.width * 0.05
                    text: 'Login'
                    on_press: root.login()

                Button:
                    font_size: self.height * 0.2 + self.width * 0.05
                    text: 'Registration'
                    on_press: root.to_registration_screen()